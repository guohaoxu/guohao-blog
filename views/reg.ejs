<%- include header %>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <form method="post" action="">
            <div class="form-group">
                <label for="regName">用户名：</label>
                <input type="text" name="name" class="form-control" id="regName" placeholder="用户名">
            </div>
            <div class="form-group">
                <label for="regPw">密码：</label>
                <input type="text" name="password" class="form-control" id="regPw" placeholder="密码">
            </div>
            <div class="form-group">
                <label for="regPwre">确认密码：</label>
                <input type="text" name="password-repeat" class="form-control" id="regPwre" placeholder="确认密码">
            </div>
            <button type="submit" class="btn btn-default">注册</button>
        </form>
    </div>
</div>
<%- include footer %>
