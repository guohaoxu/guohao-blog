<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Blog</title>
        <link rel="stylesheet" href="<%= ctx %>/css/normalize.css">
        <link rel="stylesheet" href="<%= ctx %>/css/main.css">
        <script src="/js/jquery-1.12.1.min.js"></script>
        <script src="/js/main.js"></script>
    </head>
    <body>
        <div class="top">
            <div class="nav">
                <a href="/" <% if (nav=="home") { %> class="cur" <% } %>>首 页</a>
                <a href="/archive" <% if (nav=="archive") { %> class="cur" <% } %>>存档</a>
                <a href="/tags" <% if (nav=="tags") { %> class="cur" <% } %>>标签</a>
                <a href="/links" <% if (nav=="links") { %> class="cur" <% } %>>友情链接</a>
                <span class="search-span">
                    <form action="/search" method="get">
                        <input type="tex" name="keyword" placeholder="输入标题搜索">
                    </form>
                </span>
                <% if (user) { %>
                <a href="/post" <% if (nav=="article") { %> class="cur" <% } %>>发表</a>
                <a href="/upload" <% if (nav=="upload") { %> class="cur" <% } %>>上传</a>
                <a href="/logout">退出</a>
                <span>欢迎你，<%= user %></span>
                <% } else { %>
                <a href="/login" <% if (nav=="login") { %> class="cur" <% } %>>登 录</a>
                <a href="/reg" <% if (nav=="reg") { %> class="cur" <% } %>>注 册</a>
                <% } %>
            </div>
        </div>
        <div class="content">
            <h1><%= title %></h1>
            <% if (success) { %>
            <div class="succ"><%= success %></div>
            <% } %>
            <% if (error) { %>
            <div class="err"><%= error %></div>
            <% } %>
