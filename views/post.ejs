<%- include header %>
<div class="col-sm-8 col-sm-offset-2">
    <form method="post" action="">
        <div class="form-group">
            <label for="aTitle">标题:</label>
            <input type="text" name="title" class="form-control" id="aTitle" placeholder="标题">
        </div>
        <div class="form-group">
            <label>标签:</label>
            <div class="clearfix">
                <input type="text" name="tag1" class="form-control my-inline-input wid140" placeholder="标签">
                <input type="text" name="tag2" class="form-control my-inline-input wid140" placeholder="标签">
                <input type="text" name="tag3" class="form-control my-inline-input wid140" placeholder="标签">
            </div>
        </div>
        <div class="form-group">
            <label for="aPost">正文:</label>
            <div>
                <textarea class="form-control" name="post" rows="6" id="aPost" placeholder="这里输入正文"></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-default">发表</button>
    </form>
</div>
<%- include footer %>