<div class="comments">
    <% if (article.comments) { %>
        <% article.comments.forEach(function (comment, index) { %>
        <ul class="list-group">
            <li class="list-group-item">
                <p><a href="<%= comment.website %>"><%= comment.name %></a> <small>评论于：<%= comment.time %></small></p>
                <p><%- comment.content %></p>
            </li>
        </ul>
        <% }) %>
    <% } %>
    <form method="post" class="col-sm-6 p0">
        <% if (user) { %>
        <div class="form-group">
            <label for="pName">用户名:</label>
            <input type="text" value="<%= user %>" class="form-control" id="pName" disabled>
            <input type="hidden" name="name" value="<%= user %>">
        </div>
        <div class="form-group">
            <label for="pEmail">邮箱:</label>
            <input type="text" name="email" value="<%= user.email %>" class="form-control" id="pEmail">
        </div>
        <div class="form-group">
            <label for="pWeb">网址:</label>
            <input type="text" name="website" value="/u/<%= user %>" class="form-control" id="pWeb">
        </div>
        <% } else { %>
        <div class="form-group">
            <label for="pName">用户名:</label>
            <input type="text" name="name" value="" class="form-control" id="pName" placeholder="用户名">
        </div>
        <div class="form-group">
            <label for="pEmail">邮箱:</label>
            <input type="text" name="email" value="" class="form-control" id="pEmail" placeholder="邮箱">
        </div>
        <div class="form-group">
            <label for="pWeb">网址:</label>
            <input type="text" name="website" value="http://" class="form-control" id="pWeb">
        </div>
        <% } %>
        <div class="form-group">
            <label for="pContent">评论:</label>
            <textarea name="content" class="form-control" id="pContent" rows="5" placeholder="这里输入评论"></textarea>
        </div>
        <button type="submit" class="btn btn-default">评论</button>
    </form>
</div>