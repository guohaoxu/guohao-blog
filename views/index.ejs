<%- include header %>
<% articles.forEach(function (article, index) { %>
<div class="article-per">
    <div class="article-title"><a href="/u/<%= article.author %>/<%= article.time.day %>/<%= article.title %>"><%= article.title %></a></div>
    <div class="article-info">作者： <a href="/u/<%= article.author %>"><%= article.author %></a> | 日期： <%= article.time.minute %></div>
    <div class="article-tags">标签：
        <% if (article.tags) { article.tags.forEach(function (tag, index) { %>
        <% if (tag) { %>
        <a href="/tags/<%= tag %>"><%= tag %></a>
        <% }  %>
        <% }) } %>
    </div>
    <div class="article-content"><%- article.content %></div>
    <div>阅读：<%= article.pv %> | <% if (article.comments) { %>评论： <%=  article.comments.length %><% } %></div>
</div>
<% }) %>
<%- include page %>
<%- include footer %>